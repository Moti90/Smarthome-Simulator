{
  "name": "smart-home-simulator-backend",
  "version": "1.0.0",
  "description": "Secure backend for Smart Home Simulator educational platform",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:security": "npm run test:audit && npm run test:lint-security",
    "test:audit": "npm audit --audit-level=moderate",
    "test:lint-security": "eslint . --ext .js --config .eslintrc.security.js",
    "security:scan": "snyk test && snyk monitor",
    "security:fix": "snyk wizard",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write .",
    "prepare": "husky install",
    "backup": "git add . && git commit -m \"Auto backup: $(date)\"",
    "backup:custom": "git add . && git commit -m \"$1\"",
    "backup:verify": "git fsck",
    "backup:list": "git log --oneline -10",
    "backup:restore": "echo 'Use: git checkout [commit-hash]'",
    "backup:init": "git init && git add . && git commit -m \"Initial backup: $(date)\""
  },
  "keywords": [
    "smart-home",
    "simulator",
    "education",
    "iot",
    "security"
  ],
  "author": "Smart Home Simulator Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "mongoose": "^8.0.3",
    "express-session": "^1.17.3",
    "connect-mongo": "^5.1.0",
    "express-mongo-sanitize": "^2.2.0",
    "hpp": "^0.2.3",
    "xss-clean": "^0.1.4",
    "express-brute": "^1.0.1",
    "express-brute-redis": "^0.0.1",
    "redis": "^4.6.10",
    "nodemailer": "^6.9.7",
    "joi": "^17.11.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "winston": "^3.11.0",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-security": "^2.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "snyk": "^1.1260.0",
    "@snyk/protect": "^1.1260.0",
    "npm-audit-resolver": "^4.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/smart-home-simulator-backend.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/smart-home-simulator-backend/issues"
  },
  "homepage": "https://github.com/your-org/smart-home-simulator-backend#readme",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:security"
    }
  },
  "snyk": true
}
